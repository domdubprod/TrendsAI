{
    "name": "TrendsAI Development environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "forwardPorts": [
        3000,
        8000
    ],
    "postCreateCommand": "chmod +x run.sh && pip install -r functions/requirements.txt && cd frontend && npm install",
    "remoteUser": "vscode"
}